<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/separate_height"
    android:background="@color/colorWhite"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal2"
        android:layout_marginTop="@dimen/margin_normal2"
        android:layout_marginBottom="@dimen/margin_normal2"
        android:layout_weight="1"
        android:text="Hai Bà Trưng - Hà Nội"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_large" />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="@dimen/width_large_huge2"
        android:layout_height="@dimen/height_large_huge2"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/padding_normal4"
        app:srcCompat="@drawable/ic_delete_black" />

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="@dimen/width_large_huge2"
        android:layout_height="@dimen/height_large_huge2"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/padding_normal4"
        app:srcCompat="@drawable/ic_edit_black" />

</LinearLayout>