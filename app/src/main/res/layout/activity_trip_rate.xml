<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.admin.ridesharemobileclient.ui.triprate.TripRateActivity">

    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_large_huge2"
        android:background="@color/colorGreen"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/width_large_huge2"
            android:layout_height="@dimen/height_large_huge2"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_normal4"
            app:srcCompat="@drawable/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_rate_trip"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_large_huge" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:layout_below="@+id/rlToolbar"
        android:id="@+id/tlTripRate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_large_huge2"
        android:background="@color/colorWhite"
        app:tabIndicatorHeight="@dimen/separate_height"
        app:tabSelectedTextColor="@color/colorGreenDark"
        app:tabTextColor="@color/colorBlackLight" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpTripRate"
        android:layout_below="@+id/tlTripRate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground3" />

</RelativeLayout>
