<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_normal"
    android:layout_marginEnd="@dimen/margin_normal"
    android:layout_marginBottom="@dimen/margin_normal"
    android:background="@drawable/background_border_white"
    app:cardCornerRadius="@dimen/radius_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_normal_large"
        android:paddingEnd="@dimen/padding_normal_large"
        android:paddingStart="@dimen/padding_normal_large"
        android:paddingTop="@dimen/padding_normal_large">

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/llStartPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/ic_marker_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_normal"
                android:layout_weight="3"
                android:gravity="top"
                android:singleLine="true"
                android:text="Hai Bà Trưng - Hà Nội"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tvShowMore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableEnd="@drawable/ic_down"
                android:drawablePadding="@dimen/padding_normal"
                android:gravity="end|center_vertical"
                android:singleLine="true"
                android:text="1/1/2019"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/font_medium" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/llEndPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llStartPosition"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_small">

            <ImageView
                app:srcCompat="@drawable/ic_marker_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_normal"
                android:layout_weight="3"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="TT Nếnh - Bắc Giang"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end|bottom"
                android:singleLine="true"
                android:text="100.000 VNĐ"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_large" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llInformation"
            android:layout_marginStart="@dimen/margin_large_huge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llEndPosition"
            android:layout_marginTop="@dimen/margin_normal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_huge"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khoảng cách"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="100"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/font_large_huge" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_huge"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="4/5"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/font_large_huge" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitleNumberSeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số chỗ dư"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="3/5"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/font_large_huge" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/llInformation"
            android:layout_below="@id/llInformation"
            android:layout_marginTop="@dimen/margin_normal_large">

            <TextView
                style="@style/ToolItemTripTextView"
                android:text="Hủy"
                android:drawableStart="@drawable/ic_register" />

            <TextView
                android:id="@+id/tvDetail"
                style="@style/ToolItemTripTextView"
                android:drawableStart="@drawable/ic_detail"
                android:text="Chi tiết"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
