<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.ridesharemobileclient.ui.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_large_huge2"
        android:background="@color/colorGreen"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/width_large_huge2"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_normal4"
            app:srcCompat="@drawable/ic_user_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="@dimen/padding_normal"
            android:text="Rideshare"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_large_huge" />

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="@dimen/width_large_huge2"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_normal4"
            app:srcCompat="@drawable/ic_search_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_large_huge2"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_new_feed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_normal4"
            app:srcCompat="@drawable/ic_new_feed_green" />

        <ImageView
            android:id="@+id/iv_trip_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_normal4"
            app:srcCompat="@drawable/ic_trip_submit_black" />

        <ImageView
            android:id="@+id/iv_trip_register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_normal4"
            app:srcCompat="@drawable/ic_trip_register_black" />

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_normal4"
            app:srcCompat="@drawable/ic_message_black" />

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_normal4"
            app:srcCompat="@drawable/ic_notification_black" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_normal4"
            app:srcCompat="@drawable/ic_setting_black" />

    </LinearLayout>

    <View
        android:id="@+id/vSeparate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate_height"
        android:layout_above="@id/ll_navigation"
        android:background="@color/colorBackground3" />

    <FrameLayout
        android:id="@+id/frl_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/vSeparate"
        android:background="@color/colorBackground3" />


</LinearLayout>
