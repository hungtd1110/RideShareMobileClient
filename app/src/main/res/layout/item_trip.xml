<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_normal"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_normal_large"
        android:paddingEnd="@dimen/padding_normal_large"
        android:paddingStart="@dimen/padding_normal_large"
        android:paddingTop="@dimen/padding_normal_large">

        <LinearLayout
            android:id="@+id/llStartPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/width_normal2"
                android:layout_height="@dimen/height_normal"
                app:srcCompat="@drawable/ic_marker_start" />

            <TextView
                android:id="@+id/tvStartPosition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_weight="1"
                android:gravity="top"
                android:ellipsize="middle"
                android:text="Hai Bà Trưng - Hà Nội"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_large"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvShowMore"
                android:paddingStart="@dimen/padding_medium2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_down"
                android:gravity="end|center_vertical"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEndPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llStartPosition"
            android:layout_marginTop="@dimen/margin_normal2"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/width_normal"
                android:layout_height="@dimen/height_normal"
                app:srcCompat="@drawable/ic_marker_end" />

            <TextView
                android:id="@+id/tvEndPosition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:gravity="bottom"
                android:text="TT Nếnh - Bắc Giang"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_large"
                android:singleLine="true" />

            <TextView
                android:visibility="invisible"
                android:paddingStart="@dimen/padding_medium2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_down"
                android:gravity="end|center_vertical"
                android:textColor="@color/colorBlackLight"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cslInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llEndPosition"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_normal_large"
            android:paddingEnd="@dimen/padding_small"
            android:paddingStart="@dimen/padding_small">

            <LinearLayout
                android:id="@+id/llTime"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="1/1/2019"
                    android:textColor="@color/colorGreenDark"
                    android:textSize="@dimen/font_large" />

            </LinearLayout>

