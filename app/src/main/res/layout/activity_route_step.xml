<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground3"
    tools:context="com.example.admin.ridesharemobileclient.ui.routestep.RouteStepActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_large_huge2"
        android:background="@color/colorGreen"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/width_large_huge2"
            android:layout_height="@dimen/height_large_huge2"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_normal4"
            app:srcCompat="@drawable/ic_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/list_route_step"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_large_huge" />

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/width_large_huge2"
            android:layout_height="@dimen/height_large_huge2"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/padding_normal4"
            app:srcCompat="@drawable/ic_add_white" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvRouteStep"
        android:layout_below="@+id/rlToolbar"
        android:layout_above="@+id/tvFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tvFinish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_large_huge2"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_normal"
        android:background="@drawable/background_border_green"
        android:gravity="center"
        android:text="@string/finish"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_large_huge"
        android:textStyle="bold" />

</RelativeLayout>
