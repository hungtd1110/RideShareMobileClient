<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground3"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tlNewFeed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_large_huge2"
        android:background="@color/colorWhite"
        app:tabIndicatorHeight="@dimen/separate_height"
        app:tabSelectedTextColor="@color/colorGreenDark"
        app:tabTextColor="@color/colorBlackLight" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpNewFeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground3" />

</LinearLayout>
